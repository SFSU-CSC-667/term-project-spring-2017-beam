extends layout

block content
  ul.dropdown-menu
  p= user_info.display_name + '#' + user_info.id
  if (user_info.registered)
     li
       a(href='#login' style={color: 'green'}) Login
  else
     li
       a(href='#log off' style={color: 'red'}) Log Off 
     li
       a(href='#register' style={color: 'blue'}) Register
          

  h1 User Listing

  a.create-user(href='#') Create User

  table
    thead
      tr
        th Id
        th Email
        th Dog Count
        th registered
        th id
        th display_name
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= 0
          //td(class=`dog-count-${user.id}`) = user.dogCount || 0
          td= user_info.registered
          td= user_info.display_name + '#' + user_info.id
      each room in rooms_info
        tr
          td= room.name + '#' + room.id
          td= room.master_user_display_name + '#' + room.master_user_id
          td= room.max_players
