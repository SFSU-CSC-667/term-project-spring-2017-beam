extends layout
    

nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      a.navbar-brand(href='#lobby') Liar's Dice
    ul.nav.navbar-nav.navbar-right
      li
        a Welcome, Mike
      li
        a(href='#signup')
          span.glyphicon.glyphicon-user
          |  Sign Up
      li
        a(href='#login')
          span.glyphicon.glyphicon-log-in
          |  Login
      li
        a(href='#logoff')
          span.glyphicon.glyphicon-log-out
          |  Log Off
.container
  h3 Right Aligned Navbar
  p The .navbar-right class is used to right-align navigation bar buttons.

  h1 User Listing

  a.create-user(href='#') Create User

  table
    thead
      tr
        th Id
        th Email
        th Dog Count
        th registered
        th id
        th display_name
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= 0
          //td(class=`dog-count-${user.id}`) = user.dogCount || 0
          td= user_info.registered
          td= user_info.display_name + '#' + user_info.id
      each room in rooms_info
        tr
          td= room.name + '#' + room.id
          td= room.master_user_display_name + '#' + room.master_user_id
          td= room.max_players
